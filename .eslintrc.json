{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": ["eslint:recommended", "standard-with-typescript", "prettier"],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "project": "**/tsconfig.json",
        "tsconfigRootDir": "./",
        "noUnusedLocals": true,
        "noUnusedParameters": true
    },
    "rules": {},
    "ignorePatterns": ["node_modules", "documentation"]
}
